extends layout

block content
    .animate-container
        include search.pug

        h1.header
            strong
                a= zacksData.header

        .row

            .one-half.column
                //- Links
                h2 âœˆï¸ Links

                each v, k in links
                    span ğŸ”—
                        a(href= v)= k
                    br
                br

                //- Zacks
                h2 ğŸ” Zacks

                h5 Industry Rank
                ul
                    each s in zacksData.industryRank.reverse()
                        li= s

                h5 Rank & Score
                //- TODO: format color based on rank, scores
                table
                    thead
                    tbody
                        tr
                            td Rank
                            td= zacksData.zacksRank[0]
                        each v, k in zacksData.styleScores
                            tr
                                td= k
                                td= v

                h3 Key Earnings Data
                table
                    thead
                    tbody
                        each v, k in zacksData.keyEarningsData 
                            tr
                                td= k
                                td= v

            .one-half.column
                //- Yahoo
                h2 ğŸ—“ Yahoo Earnings History
                table
                    thead
                        tr
                            th Date
                            th Estimate
                            th Reported
                            th Surprise
                    tbody
                        each r in yahooData
                            tr
                                td= r.date
                                td= r.est
                                td= r.reported
                                //- surprise data
                                - var surprise = r.surprise
                                if surprise.startsWith('+')
                                    td.green= surprise
                                else if surprise.startsWith('-')
                                    td.red= surprise
                                else
                                    td= surprise